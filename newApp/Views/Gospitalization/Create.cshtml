@model Gospitalization
@{
    Layout = "_Layout";
}
<form method="post" enctype="multipart/form-data" class="d-flex justify-content-center flex-column">
    <div asp-validation-summary="ModelOnly"></div>
    <p class="h2">Госпитализация пациентов</p>
    <div class="form-group">
        <label asp-for="PatientsId" class="form-label"></label>
        <select asp-for="PatientsId">
            @foreach (var item in Model.PatientsIds)
            {
                <option value="@item.Id">@item.GetFullName()</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CodeGospitalization" class="form-label"></label>
        <input asp-for="CodeGospitalization" />
    </div>
    <div class="form-group">
        <label asp-for="DateGospitalization" class="form-label"></label>
        <input asp-for="DateGospitalization" />
    </div>
    <div class="form-group">
        <label asp-for="Diagnosis" class="form-label"></label>
        <input asp-for="Diagnosis" />
    </div>
    <div class="form-group">
        <label asp-for="PurposeGospitalization" class="form-label"></label>
        <input asp-for="PurposeGospitalization" />
    </div>
    <div class="form-group">
        <label asp-for="Department" class="form-label"></label>
        <input asp-for="Department" />
    </div>
    <div class="form-group">
        <label asp-for="Conditions" class="form-label"></label>
        <select asp-for="Conditions">
            <option value="False">Бюджет</option>
            <option value="True">Платно</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TermGospitalization" class="form-label"></label>
        <input asp-for="TermGospitalization" />
    </div>
    <div class="form-group">
        <label asp-for="AdditionalInformation" class="form-label"></label>
        <input asp-for="AdditionalInformation" />
    </div>

    <p>Пациент:</p>
    <div id="patientHolder">

    </div>
    <input type="submit" class="btn-primary " placeholder="Добавить" />
</form>

 @section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="/js/GetUserScript.js"></script>
    }
        
 }